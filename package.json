{
    "name": "asymptote",
    "displayName": "Asymptote",
    "description": "Support for Asymptote, a vector graphics language.",
    "version": "1.3.0",
    "publisher": "supakornras",
    "repository": {
        "type": "git",
        "url": "https://github.com/supakorn-ras/vscode-lang-asymptote"
    },
    "license": "SEE LICENSE IN LICENSE.md",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:asymptote"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "asymptote",
                "aliases": [
                    "Asymptote",
                    "asymptote"
                ],
                "extensions": [
                    ".asy"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "breakpoints": [
            {
                "language": "asymptote"
            }
        ],
        "configuration": {
            "title": "Asymptote",
            "properties": {
                "asymptote.analysisEngine": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable Asymptote static analysis engine to provide variable signatures and definitions (Work in Progress)"
                },
                "asymptote.WSLMode": {
                    "type": "boolean",
                    "default": false,
                    "description": "Starts Asymptote Server in WSL mode. This option is inert if not running on native Windows"
                },
                "asymptote.asyCmd": {
                    "type": "string",
                    "default": "asy",
                    "description": "Command to asymptote executable"
                },
                "asymptote.additionalArgs": {
                    "type": "array",
                    "default": [],
                    "description": "Additional options to pass to asymptote server."
                }
            }
        },
        "grammars": [
            {
                "language": "asymptote",
                "scopeName": "source.asymptote",
                "path": "./syntaxes/asymptote.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "@types/node": "^22.13.8",
        "@types/vscode": "^1.97.0",
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@typescript-eslint/eslint-plugin": "^8.25.0",
        "@typescript-eslint/parser": "^8.25.0",
        "eslint": "^9.21.0",
        "globals": "^16.0.0",
        "prettier": "^3.5.2",
        "typescript-eslint": "^8.25.0",
        "eslint-config-prettier": "^10.0.2"
    },
    "scripts": {
        "build": "tsc -p ./"
    }
}
